<table>
  <thead>
    <tr>
      <th>News</th>
      <th>Events</th>
      <th>Team Notices</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="news">
        <% @news.each do |item| %>
          <% @item = item %>
          <%= render :partial => "postings/posting" %>
        <% end %>
      </td>

      <td id="events">
        <% @events.each do |item| %>
          <% @item = item %>
          <%= render :partial => "postings/posting" %>
        <% end %>
      </td>

      <td id="notices">
        <% @team_notices.each do |item| %>
          <% @item = item %>
          <%= render :partial => "postings/posting" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td colspan="3"><%= image_tag("hr.png", :id => "postings-hr") %></td>
    </tr>      
  </tbody>
</table>
